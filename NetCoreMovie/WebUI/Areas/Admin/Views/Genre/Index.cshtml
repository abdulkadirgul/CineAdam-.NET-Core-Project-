@model List<DataAccess.Entity.Genre>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h2>Türler</h2>
        <a asp-action="PostGenre" asp-controller="Genre" class="btn btn-primary float-right">Tür Ekle</a>
    </div>
    <div class="card-body">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Tür</th>
                    <th>Durum</th>
                    <th>İşlem</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var genre in Model)
                {
                    <tr>
                        <td>@genre.Id</td>
                        <td>@genre.GenreName</td>
                        <td>
                            @{
                                if (genre.IsActive)
                                {
                                    <span class="badge badge-success">Aktif</span>
                                }
                                else
                                {
                                    <span class="badge badge-danger">Pasif</span>
                                }
                            }
                        </td>
                       <td><i class="fas fa-trash-alt"><i class="fas fa-edit"></i></i></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
